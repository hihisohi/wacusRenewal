<script is:inline>
    gsap.utils.toArray(".ani-fadeup").forEach(item => {
        const tween = gsap.from(item, {
            duration: .4,
            yPercent: 10,
            opacity: 0,
            ease: 'power2.inOut',
            stagger: {
                each: .2
            }
        })

