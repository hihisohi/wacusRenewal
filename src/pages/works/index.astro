// 자동재생 탭
    function initializeTabs2(tabMenuSelector2, tabContentSelector2, activeClass2, scrollTargetSelector2) {
        let autoPlayInterval; // 자동 재생 타이머 저장
        let isUserClicked = false; // 사용자가 클릭했는지 여부
        let currentIndex = 0; // 현재 활성화된 탭 인덱스

        // 초기 설정
        AOS.init();
        $(tabContentSelector2).hide();
        $(tabContentSelector2).first().show();
        $(tabMenuSelector2 + " li").first().addClass(activeClass2);

        // 자동 재생 함수
        function startAutoPlay() {
            stopAutoPlay(); // 기존 인터벌 초기화
            autoPlayInterval = setInterval(() => {
                currentIndex = (currentIndex + 1) % $(tabMenuSelector2 + " li").length;
                activateTab(currentIndex);
            }, 5000); // 5초 간격
        }

        // 자동 재생 멈추기
        function stopAutoPlay() {
            clearInterval(autoPlayInterval);
        }

        // 특정 인덱스의 탭 활성화
        function activateTab(index) {
            // 모든 탭에서 활성 클래스 제거
            $(tabMenuSelector2 + " li").removeClass(activeClass2);
            // 해당 인덱스의 탭에 활성 클래스 추가
            $(tabMenuSelector2 + " li").eq(index).addClass(activeClass2);

            // 모든 탭 콘텐츠 숨기고 해당 콘텐츠 표시
            $(tabContentSelector2).hide();
            $(tabContentSelector2).eq(index).show();

            // 스크롤 이동
            if ($(scrollTargetSelector2).length > 0) {
                $("html, body").animate(
                    {
                        scrollTop: $(scrollTargetSelector2).offset().top,
                    },
                    500
                ); // 스크롤 지속 시간 (500ms)
                AOS.reflash();
            }
        }
    

        // 탭 메뉴 클릭 이벤트
        $(tabMenuSelector2).on("click", "li", function () {
            stopAutoPlay(); // 클릭 시 자동 재생 중지
            isUserClicked = true;

            // 클릭한 탭 활성화
            currentIndex = $(this).index();
            activateTab(currentIndex);

            // 5초 후 자동 재생 재개
            setTimeout(() => {
                isUserClicked = false;
                startAutoPlay();
            }, 3000);
        });

        // 초기 자동 재생 시작
        startAutoPlay();
    }
