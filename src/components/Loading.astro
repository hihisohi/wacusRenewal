<script>
    const textLarge = "안녕하세요<br>와커스를 찾아오셨나요?<br>로딩이 끝나고 홈페이지를 보는 순간<br>여러분의 고민은 사라질 것입니다.";
    const textSmall = "안녕하세요<br>와커스를 찾아오셨나요?<br>로딩이 끝나고 홈페이지를 보는 순간<br>여러분의 고민은 사라질 것입니다.";

    const isLargeScreen = window.innerWidth >= 1024;
    const text = isLargeScreen ? textLarge : textSmall;

    let index = 0;
    const speed = 40; // 글자 나타나는 속도 (ms)
    let typingActive = true; // 로딩과 무관하게 진행하기 위한 플래그

    function typeWriter() {
        // const element = document.getElementById("loaderText");

        if (index < text.length && typingActive) {
            if (text.charAt(index) === "<") {
                // HTML 태그(<br>) 처리
                const tagEnd = text.indexOf(">", index);
                element.innerHTML += text.substring(index, tagEnd + 1);
                index = tagEnd + 1;
            } else {
                element.innerHTML += text.charAt(index);
                index++;
            }
            setTimeout(typeWriter, speed); // 독립적으로 애니메이션
        }
    }

// 로딩이 끝나지 않아도 글자 타이핑이 계속 진행
window.onload = function () {
    const element = document.getElementById("loaderText");
    element.style.textAlign = "left";
    typeWriter(); // 애니메이션 시작
};

// 로딩 종료 시 로딩 애니메이션 제어
function stopLoadingAnimation() {
    typingActive = false; // 타이핑 멈춤
    document.querySelector(".loading-screen").style.opacity = 0;
    document.querySelector(".loading-screen").style.pointerEvents = "none";
}
</script>

